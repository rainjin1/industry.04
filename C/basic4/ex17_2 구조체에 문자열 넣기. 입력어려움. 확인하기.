#include <stdio.h>
#include <string.h>
#include <stdlib.h>

struct profile
{
    char name[20];
    int age;
    double height;
    char *intro;
};

int main()
{
    struct profile yun1;  
    strcpy(yun1.name, "서하윤");
    yun1.age=17;
    yun1.height=150;
    yun1.intro = (char *)malloc(80); //여기가 중요. 여기서 맬락으로 동적영역에 잘 설정해줘야함.
    
    printf("자기소개 : \n");
    fgets(yun1.intro, 80, stdin);
    printf("%s, %d, %.1lf, %s\n", yun1.name, yun1.age, yun1.height, yun1.intro);
    free(yun1.intro);
    return 0;
}
