#include <stdio.h>

// 함수 선언
void input_ary(double *pa, int size);
double find_max(double *pa, int size);

int main(void)
{
    double ary[5];
    double max;
    int size = sizeof(ary) / sizeof(ary[0]);

    // 배열에 값 입력
    input_ary(ary, size);
    
    // 최댓값 찾기
    max = find_max(ary, size);
    
    // 결과 출력
    printf("배열의 최댓값 : %.1lf\n", max);

    return 0;
}

// 배열에 값을 입력하는 함수
void input_ary(double *pa, int size)
{
    int i;

    printf("%d개의 실수값 입력 : ", size);
    for (i = 0; i < size; i++)
    {
        // pa + i는 &pa[i]와 같은 의미입니다.
        scanf("%lf", pa + i);
    }
}

// 배열에서 최댓값을 찾는 함수
double find_max(double *pa, int size)
{
    double max;
    int i;

    max = pa[0]; // 첫 번째 요소를 최댓값으로 가정
    for (i = 1; i < size; i++)
    {
        if (pa[i] > max) 
        {
            max = pa[i];
        }
    }

    return max;    // 찾은 최댓값 반환
}
