#include <stdio.h>
#include <stdlib.h> // strtol을 사용하기 위함.
#include <errno.h> // atoi보안문제를 회피하기위함.

int main()
{
    int age; //atoi 보안문제 회피하려면, long타입으로 해야함 + char *endptr 추가해줘야함.
    char strage[10];
    char name[20];
    //정수값을 스캔f로 안받고, 아예 fgets로 받아버리면 어떨까?
    printf("나이 입력 : ");
    // scanf("%d", &age);
    fgets(strage, sizeof(strage), stdin);
    //변환을 해줘야함.
    age=atoi(strage); //atoi 는 보안문제가 있기도함.
    //strtol(strage, &endptr, sizeof(strage); <<<< 한방에 변환이 가능함.
    //getchar(); // 편법. 

    printf("이름 입력 : ");
    fgets(name, sizeof(name), stdin);
    printf("%d   %s\n", age, name);
    return 0;
}
