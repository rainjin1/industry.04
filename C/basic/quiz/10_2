#define _CRT_SECURE_NO_WARNINGS 
#include <stdio.h>
int main()
{
	//3 * 1 = 1 .... 9
	int i = 0; // i(ndex), j, k, l, m, n ... 하도록 암묵적인 관습이 생김.
	int dan;
	while (i <9)	{
		i++;
		dan = 3;
		printf("%d * %d = %d\n",dan, i, dan * i);
	}
	printf("\n\n");
	for (int k = 1; k < 10 ; k++) {
		dan = 5;
		printf("%d * %d = %d\n",dan, k, dan * k);
	}

	return 0;
}
